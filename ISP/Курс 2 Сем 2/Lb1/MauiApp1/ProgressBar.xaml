<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.ProgressBar"
             Title="ProgressBar">
    <VerticalStackLayout>
        <Label 
            x:Name="MainLable"
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />


        <Label x:Name ="label" Text="Progressbar" />
        <ProgressBar x:Name = "progressBar" Progress="0" ProgressColor="SeaGreen" />

        <HorizontalStackLayout HorizontalOptions="Center" Padding="20">
            <Button x:Name="Start" Text="Start" Margin="20" Clicked="CalculateSin"/>
            <Button x:Name="Cancel" Text="Cancel" Margin="20" Clicked="Cancel_Click"/>
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>